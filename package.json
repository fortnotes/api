{
    "name": "fortnotes-api",
    "version": "2.0.0",
    "description": "FortNotes server application to process client GraphQL requests.",
    "homepage": "https://fortnotes.com/",
    "author": {
        "name": "Stanislav Kalashnik",
        "email": "darkpark.main@gmail.com"
    },
    "type": "module",
    "main": "./src/index.js",
    "files": [
        "/src"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/fortnotes/api.git"
    },
    "scripts": {
        "dev": "nodemon --watch ./src --ext js --trace-warnings --require dotenv/config src/index.js",
        "start": "NODE_ENV=production node ./src/index.js",
        "lint": "eslint ./src ./tests",
        "jest": "NODE_OPTIONS='--experimental-vm-modules --require dotenv/config' FORTNOTES_HTTP_PORT=0 npx jest --config tests/config.js",
        "test": "npm run lint && npm run jest",
        "erd": "node src/utils/erd.js"
    },
    "dependencies": {
        "apollo-server-fastify": "^3.3.0",
        "dataloader": "^2.0.0",
        "fast-jwt": "^1.2.0",
        "fastify": "^3.21.3",
        "fastify-cookie": "^5.3.1",
        "fastify-jwt": "^3.1.0",
        "fastify-plugin": "^3.0.0",
        "graphql": "^15.5.3",
        "pino-pretty": "^7.0.1",
        "sequelize": "^6.6.5",
        "sqlite3": "^5.0.2"
    },
    "devDependencies": {
        "axios": "^0.21.4",
        "chai": "^4.3.4",
        "dotenv": "^10.0.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-jest": "^24.4.2",
        "jest": "^27.2.0",
        "nodemon": "^2.0.12",
        "sequelize-erd": "^1.3.1"
    },
    "keywords": [
        "fortnotes",
        "encryption",
        "private",
        "notes",
        "storage",
        "server",
        "graphql",
        "api"
    ],
    "license": "AGPLv3"
}
